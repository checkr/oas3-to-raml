{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "generator-star-spacing": 0,
        "no-mixed-spaces-and-tabs": 2,
        "jsx-quotes": [2, "prefer-single"],
        "key-spacing": [2, {
          "align": "value"
        }],
        "max-len": [2, 120, 2],
        "no-multi-spaces": [2, {
          "exceptions": {
            "ImportDeclaration":  true,
            "Property":           true,
            "VariableDeclarator": true
          }
        }],
        "prefer-const": 2,
        "react/jsx-indent-props": 0,
        "semi": [1, "always"]
      }
}